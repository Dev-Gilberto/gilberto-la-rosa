---
import "@styles/Global.css";

import FooterLayout from "@components/FooterLayout.astro";
import NavBar from "@components/NavBar.astro";
import BtnTop from "@components/BtnTop.astro";

import Seo from "@components/Seo.astro";
import { ViewTransitions } from "astro:transitions";
import { slide } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <Seo />

    <title>{title}</title>
    <!-- Google tag (gtag.js) -->
    <script
      async
      type="text/partytown"
      src="https://www.googletagmanager.com/gtag/js?id=G-R9ZB16P4YF"></script>
    <script class="module">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-R9ZB16P4YF");
    </script>

    <ViewTransitions />
  </head>
  <body>
    <header class="w-[90%] mx-auto">
      <NavBar />
    </header>
    <main transition:animate={slide({ duration: "0.6s" })}>
      <slot />
    </main>
    <footer>
      <FooterLayout />

      <BtnTop />
    </footer>
  </body>
</html>
