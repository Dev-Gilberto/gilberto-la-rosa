---
import "@styles/Global.css";

import FooterLayout from "@components/FooterLayout.astro";
import NavBar from "@components/NavBar.astro";
import BtnTop from "@components/BtnTop.astro";
import GoogleTagAnalytics from "@components/GoogleTagAnalytics.astro";
import Seo from "@components/Seo.astro";
import { ViewTransitions } from "astro:transitions";
import { slide } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <Seo />

    <title>{title}</title>
    <GoogleTagAnalytics />
    <ViewTransitions />
  </head>
  <body>
    <header class="w-[90%] mx-auto">
      <NavBar />
    </header>
    <main transition:animate={slide({ duration: "0.6s" })}>
      <slot />
    </main>
    <footer>
      <FooterLayout />

      <BtnTop />
    </footer>
  </body>
</html>
