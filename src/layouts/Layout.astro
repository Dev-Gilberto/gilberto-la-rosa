---
import "@styles/global.css";

import FooterLayout from "@components/FooterLayout.astro";
import NavBar from "@components/NavBar.astro";
import BtnTop from "@components/BtnTop.astro";

import Seo from "@components/Seo.astro";
import { ViewTransitions } from "astro:transitions";
import { slide } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <Seo />
    <title>{title}</title>
    <!-- Google tag (gtag.js) -->
    <script
      async
      type="text/partytown"
      src="https://www.googletagmanager.com/gtag/js?id=G-8E6J7BCCGV"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-8E6J7BCCGV");
    </script>
    <ViewTransitions />
  </head>
  <body>
    <main transition:animate={slide({ duration: "0.6s" })}>
      <slot />
    </main>
    <footer>
      <FooterLayout />

      <BtnTop />
    </footer>
  </body>
</html>
