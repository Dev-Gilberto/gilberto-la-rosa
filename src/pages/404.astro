<style>
  .img-404-animate {
    max-width: 100%;
    width: 10rem;
    height: 10rem;
    position: absolute;
    margin-left: auto;
    margin-right: auto;
    left: 0;
    right: 0;
    text-align: center;
    z-index: -2;
    animation: animacion cubic-bezier(0.42, 0, 0.58, 1) 5s infinite alternate;
  }
  @keyframes animacion {
    0% {
      transform: translateY(0);
    }
    to {
      transform: translateY(-30px);
    }
  }
</style>
