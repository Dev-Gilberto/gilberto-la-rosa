---
interface Props {
  name: string;
  src: string;
  alt: string;
  tecnology: string;
  text: string;
  href: string;
  state: string;
}

const { name, src, alt, tecnology, text, href, state } = Astro.props;
---

<li
  class="rounded-xl w-full md:w-[19rem] h-auto list-none bg-[#212121] text-[#f5efe7] border-r-8 border-[#f5efe7] hover:border-[#f79533] hover:-translate-y-2 duration-300"
>
  <div class="w-full h-auto p-4 -mt-10">
    <img class="rounded-xl" {src} {alt} />
  </div>
  <div class="text-center bg-[#f5efe7] text-[#212121]">
    <h2 class="font-medium text-left pt-2 pl-4 uppercase">
      tecnologías aplicadas:
    </h2>
    <ul>
      <li class="m-0 p-2 text-xs font-normal tracking-wide uppercase">
        {tecnology}
      </li>
    </ul>
    <div class="">
      <h2 class="font-medium text-left pl-4 uppercase">
        Empresa u Organización:
      </h2>
      <p class="text-xl uppercase font-bold tracking-wider">
        {name}
      </p>
    </div>
    <p class="w-full p-2 font-light tracking-wide text-left text-sm">
      {text}
    </p>
  </div>
  <a
    {href}
    target="_blank"
    title="Sitio web de la empresa u organizacion"
    class="tracking-wider uppercase py-4 block text-center rounded-b-xl hover:text-[#f79533] duration-300"
  >
    {state} &#11016;</a
  >
</li>
<style>
  @media (min-width: 768px) {
    a {
      transition: box-shadow 0.3s ease-in-out;
    }
    a:hover {
      box-shadow: 8px 10px 0 0 var(--hover-orange);
    }
    a:active {
      box-shadow: none;
    }
  }
</style>
