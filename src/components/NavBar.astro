---
import { Icon } from "astro-icon/components";
---

<nav class="flex-none right-0 relative top-0 z-[100]">
  <div>
    <input
      id="responsive-menu"
      class="opacity-0 absolute -z-10"
      type="checkbox"
    />
    <label
      for="responsive-menu"
      class="items-center cursor-pointer flex justify-between py-[0.5em] px-0"
    >
      <!-- logo -->
      <a href="/" title="Logo Gilberto La Rosa">
        <Icon name="logo" size={60} />
      </a>
      <!-- texto -->
      <span class="animate-text-deg text-4xl uppercase font-black">(menú)</span>
      <!-- button -->
      <span id="menu-icon"></span>
    </label>
    <!-- menu  -->
    <div id="overlay"></div>
    <ul>
      <li>
        <a href="/">¡hola!</a>
      </li>
      <li>
        <a href="/proyectos-open-source">proyectos open source</a>
      </li>
      <li>
        <a href="/trabajos-dependientes">trabajos dependientes</a>
      </li>
      <li>
        <a href="/proyectos-freelance">proyectos freelance</a>
      </li>
      <li>
        <a href="/blog">blog</a>
      </li>
    </ul>
    <!-- redes sociales -->
    <!-- LinkedIn -->
    <ul id="social-media">
      <li>
        <a
          href="https://www.linkedin.com/in/gilberto-la-rosa/"
          sr-only="linkedin"
          target="_blank"
          title="linkedin"
        >
          <Icon name="linkedin" class="hover:text-[#ef4e7b] duration-300" />
          <span class="screen-reader-text">LinkedIn</span>
        </a>
      </li>
      <!-- twitter -->
      <li>
        <a
          href="https://twitter.com/dev_gilberto"
          sr-only="X"
          title="X"
          target="_blank"
        >
          <Icon name="x" class="hover:text-[#a166ab] duration-300" />
          <span class="screen-reader-text">X</span>
        </a>
      </li>
      <!-- github -->
      <li>
        <a
          href="https://github.com/Dev-Gilberto"
          sr-only="github"
          target="_blank"
          title="github"
        >
          <Icon name="github" class="hover:text-[#6fba82] duration-300" />
          <span class="screen-reader-text">Github</span>
        </a>
      </li>
    </ul>
  </div>
</nav>
<style>
  .screen-reader-text {
    clip: rect(1px 1px 1px 1px);
    clip: rect(1px, 1px, 1px, 1px);
    height: 1px;
    overflow: hidden;
    position: absolute !important;
    width: 1px;
  }

  /*** LABEL ***/
  nav label {
    font: 2em/1 var(--Font-global);
  }

  /* Hamburger Icon */
  #menu-icon,
  #menu-icon:before,
  #menu-icon:after {
    background: var(--gray-dark-color);
    border-radius: 0.05em;
    height: 0.2em;
    transition: all 0.2s ease-in-out;
    width: 100%;
  }

  #menu-icon {
    display: inline-block;
    margin: 0.4em 0;
    max-width: 1em;
    position: relative;
  }

  #menu-icon:before,
  #menu-icon:after {
    content: "";
    left: 0;
    position: absolute;
  }

  #menu-icon:before {
    top: -0.4em;
  }

  #menu-icon:after {
    bottom: -0.4em;
  }

  /* Close Icon */
  nav input[type="checkbox"]:checked + label #menu-icon {
    background: transparent;
  }

  nav input[type="checkbox"]:checked + label #menu-icon:before {
    top: 0;
    transform: rotate(-45deg);
  }

  nav input[type="checkbox"]:checked + label #menu-icon:after {
    bottom: 0;
    transform: rotate(45deg);
  }

  /*** MENU ***/
  /* Overlay */
  nav input:checked ~ #overlay {
    background: var(--hover-orange);
    bottom: 0;
    left: 0;
    height: 100vh;
    position: fixed;
    right: 0;
    top: 0;
    width: 100vw;
    z-index: -1;
    transition: all 0.3s ease;
  }

  /* List */
  nav ul {
    font-size: 1.6em;
    list-style: none;
    margin: 0;
    max-height: 0;
    opacity: 0;
    overflow: hidden;
    padding: 0;
    text-align: center;
    transition: all 0.3s ease;
  }

  nav input:checked ~ ul {
    margin: 1em;
    max-height: inherit;
    opacity: 1;
  }
  nav ul > li {
    margin: 0.4em 0;
    transition: all 0.3s ease;
  }
  @media (min-width: 768px) {
    nav ul > li {
      margin: 0.03em 0;
    }
  }

  nav ul a {
    color: var(--gray-dark-color) !important;
    text-decoration: none;
    font-weight: 900;
    text-transform: capitalize;
    font-size: 1.2em;
    transition: text-decoration 0.3s ease-in-out;
  }

  @media (min-width: 768px) {
    nav ul a {
      font-size: 3em;
    }
  }

  nav ul a:hover {
    text-decoration: underline;
  }

  /* Social Media */
  nav ul#social-media > li {
    display: inline-block;
    margin: 0.5em;
  }
</style>
